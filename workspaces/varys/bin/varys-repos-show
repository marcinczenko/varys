#!/usr/bin/env node

"use strict";

const program = require("commander");
const chalk = require("chalk");

const pkg = require("../package.json");
const {
  config: { defaultConfiguration },
  logger: { infoMessage },
  commands: { showRepositories }
} = require("../lib");

program
  .version(pkg.version)
  .description(pkg.description)
  .action(function(env) {
    infoMessage(chalk`show repositories`);
    showRepositories(defaultConfiguration);
  })
  .parse(process.argv);
